<!-- Needs to be setup to have the template that handelbars can render onto -->
<!-- Create a button that will submit the user input into the database -->

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="col align-self-center">

      <div id="burger">
        <img src="/assets/img/hamburger.jpg" alt="Burger" id="burgerImage">
      </div>

      <div id="title">
        <h1>Eat a Burger</h1>
      </title>
    </div>
  </div>

  <div class="row">
    <div class="col align-self-center">
      <hr>
      <h2>Add your favorite Burger</h2>
      <form class="form-control" action="/burgers" method="POST">
        <label class="sr-only" for="inlineFormInput">Name</label>
        <input type="text" name="burger_name" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput burger_name" placeholder="Your Dream Burger">
        <br>
        <button type="submit" class="btn btn-primary addBurgerButton">Submit</button>
      </form>
      <hr>
    </div>
  </div>

</div>
</div>

<div class="container">
  <div class="row">
    <div class="col align-self-center">
      {{#each burgers}}
      {{#unless this.devoured}}

      <div id="allTheBurgers">
        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
          <input class="form-control" id="eatenBurgers" type="text" placeholder="{{this.burger_name}}" readonly>
          <button type="submit" class="btn btn-primary eatAButton">Eat this burger?</button>
        </form>
      </div>

      {{/unless}}
      {{/each}}

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col align-self-center">

      <div id="devouredBurgers">
        <hr>
        <h2>Burgers that are no more:</h2>
      </br>
        {{#each burgers}}
        {{#if this.devoured}}

        <input class="form-control" id="eatenBurgers" type="text" placeholder="{{this.burger_name}}" readonly>

      {{/if}}
      {{/each}}
      </div>
    </div>
  </div>
</div>
<hr>
<footer class="footer">
</footer>
